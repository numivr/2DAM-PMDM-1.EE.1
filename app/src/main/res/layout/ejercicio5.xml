<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para mostrar el nÃºmero o el resultado -->
    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:padding="16dp"
        android:background="#E0E0E0"
        android:gravity="end"
        android:layout_marginBottom="16dp" />

    <!-- TableLayout para organizar los botones de la calculadora -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0">

        <!-- Fila 1 -->
        <TableRow>
            <Button android:text="7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton7" />
            <Button android:text="8" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton8"/>
            <Button android:text="9" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton9" />
            <Button android:text="/" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/dividir" />
        </TableRow>

        <!-- Fila 2 -->
        <TableRow>
            <Button android:text="4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton4" />
            <Button android:text="5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton5"/>
            <Button android:text="6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton6" />
            <Button android:text="*" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/botonmultiplicar" />
        </TableRow>

        <!-- Fila 3 -->
        <TableRow>
            <Button android:text="1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton1"/>
            <Button android:text="2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton2" />
            <Button android:text="3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton3"/>
            <Button android:text="-" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/botonmenos" />
        </TableRow>

        <!-- Fila 4 -->
        <TableRow>
            <Button android:text="C" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"  android:id="@+id/botonborrar"/>
            <Button android:text="0" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/boton0" />
            <Button android:text="." android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/botoncoma"/>
            <Button android:text="+" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/botonmas" />
        </TableRow>

        <!-- Fila 5 -->
        <TableRow>
            <Button android:text="=" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_span="4" android:id="@+id/botonresultado"/>
        </TableRow>

    </TableLayout>
</LinearLayout>
